.hexagon
	position relative
	width 95px 
	height 54.85px
	background-color #f2a034
	margin 27.42px 0
	border-left solid 3px #2a2a2a
	border-right solid 3px #2a2a2a
	z-index 20
.hexagon:before
.hexagon:after
	content ""
	position absolute
	z-index 1
	width 67.18px
	height 67.18px
	-webkit-transform scaleY(0.5774) rotate(-45deg)
	-ms-transform scaleY(0.5774) rotate(-45deg)
	transform scaleY(0.5774) rotate(-45deg)
	background-color inherit
	left 10.9124px
	z-index 20
.hexagon:before
	top -33.5876px
	border-top solid 4.2426px #2a2a2a
	border-right solid 4.2426px #2a2a2a
.hexagon:after
	bottom -33.5876px
	border-bottom solid 4.2426px #2a2a2a
	border-left solid 4.2426px #2a2a2a
	
