header
	z-index 1000
	nav
		z-index 0
	.titlebar
		z-index 1
		.nav-tabs
			border-bottom 0px
			font-size 1em
			font-weight 400
			li
				a:hover
				a:focus
					border-color #2a2a2a
					background-color #2a2a2a
					color white
			.open
				a
				a:hover
				a:focus
					background-color #2a2a2a
					border-color #2a2a2a
				.user-icon-container
					border-color white
					.user-icon
						fill white
			.caret
				margin-left 5px
				margin-right 5px
			.user-icon-container
				border-color #2ebd59
				width 35px
				height 35px
				display inline-block
				margin -10px 5px -10px 0
				vertical-align middle
				border 1px solid #fff
				-webkit-transition border-color .2s
				-o-transition border-color .2s
				transition border-color .2s
				.user-icon
					fill #fff
					padding 7px
					width 100%
					height 100%
					-webkit-transition fill .2s
					-o-transition fill .2s
					transition fill .2s
			.dropdown-menu
				background-color #2a2a2a
				right 0
				left initial
				.divider
					margin 0px
				li
					a
						padding-top 8px
						padding-bottom 8px
						color white
						background-color #2a2a2a
						border-color #2a2a2a
						&:hover
							color white
							background-color #f2a034
						.glyphicon
							padding-right 5px
				.divider
					background-color #545454
.login
	h4
		display inline-block
		text-transform uppercase
		vertical-align middle
		font-weight 300
		line-height 0
		color #007675
		font-family 'Oswald', sans-serif
	p
		text-align left
		padding-left 20px
		padding-right 20px
		font-size 1.1em
	a
		.glyphicon
			padding-right 5px
